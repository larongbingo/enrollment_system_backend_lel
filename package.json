{
  "name": "backend_student_portal",
  "version": "0.0.1",
  "description": "The backend of the webapp for students to create profile",
  "private": true,
  "author": "Renz Pagulayan",
  "license": "AGPL-3.0",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "rimraf ./build && npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps inline",
    "build:prod": "rimraf ./build && npm run build:types && npm run build:prod:js",
    "build:prod:js": "babel src --out-dir build  --extensions \".ts,.tsx\" --no-comments --compact true --minified",
    "start": "cross-env NODE_ENV=development node ./build/server",
    "start:prod": "cross-env NODE_ENV=production node ./build/server",
    "slc:status": "slc ctl status backed_student_portal",
    "slc:build": "npm run build && slc build",
    "slc:start": "slc start && slc ctl env-set backend_student_portal NODE_ENV=development",
    "slc:start:prod": "slc start && slc ctl env-set backend_student_portal NODE_ENV=production && slc ctl set-size backend_student_portal 4",
    "slc:stop": "slc ctl stop backend_student_portal",
    "test": "cross-env NODE_ENV=testing nyc --reporter=lcov --reporter=text mocha ./tests/tests.ts --bail --exit --opts ./tests/mocha.opts",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "sync-tables": "ts-node ./scripts/sync.tables.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.1.4",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/debug": "0.0.31",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/express-validator": "^3.0.0",
    "@types/helmet": "0.0.42",
    "@types/http-errors": "^1.6.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mocha": "^5.2.5",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.11.7",
    "@types/randomstring": "^1.1.6",
    "@types/sequelize": "^4.27.26",
    "@types/sinon-chai": "^3.2.0",
    "@types/sinon-express-mock": "^1.3.5",
    "babel-plugin-module-resolver": "^3.1.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.2.0",
    "sinon-express-mock": "^2.0.5",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "bcrypt": "^3.0.1",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "debug": "^4.1.1",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.0",
    "helmet": "^3.13.0",
    "http-errors": "^1.7.1",
    "jsonwebtoken": "^8.3.0",
    "morgan": "^1.9.1",
    "mysql2": "^1.6.1",
    "npm": "^6.4.1",
    "randomstring": "^1.1.5",
    "reflect-metadata": "^0.1.12",
    "sequelize": "^4.39.0",
    "sequelize-typescript": "^0.6.6"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.js",
      "**/*.types.js",
      "**/scripts",
      "**/tests",
      "**/build/index.js",
      "**/coverage",
      "**/build",
      "**/app.js",
      "**/index.ts"
    ],
    "all": true
  }
}
